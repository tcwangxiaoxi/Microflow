<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<configuration
        xmlns="http://www.jooq.org/xsd/jooq-codegen-3.8.0.xsd">

    <jdbc>
        <driver>com.mysql.jdbc.Driver</driver>
        <url>jdbc:mysql://localhost:3306/microflow</url>
        <user>root</user>
        <password>root</password>
    </jdbc>

    <generator>
        <name>org.jooq.util.JavaGenerator</name>

        <database>
            <name>org.jooq.util.mysql.MySQLDatabase</name>
            <inputSchema>microflow</inputSchema>
            <includes>.*</includes>
            <excludes></excludes>
        </database>

        <target>
            <packageName>com.baidu.microflow.generated.jooq</packageName>
            <directory>jooq-output</directory>
            <encoding>UTF-8</encoding>
        </target>
    </generator>
</configuration>
